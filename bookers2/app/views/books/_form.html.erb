<div class='col-xs-3'>
      <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag @user,:profile_image, :fill, 60,60, class: "img-circle pull-left profile-thumb",fallback: "no_image.jpg"%></tr> 
      <tr>
    <th>name</th>
    <th class="profile-name"><%= @user.name %></th>
      </tr>
      <tr>
    <th>introduction</th>
    <th class="profile-introduction"><%= @user.introduction %></th>
      </tr>
      </table>
      
      <% if @user.id == current_user.id %>
      <div class='row'>
      <%= link_to '', edit_user_path(current_user) ,class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      </div>
      <% end %>

      <h2>New book</h2>

      <%= form_for(book) do |f| %>

      <h5>Title</h5>
      <%= f.text_field :title %>

      <h5>Opinion</h5>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book',class: "btn btn-primary" %>
    <% end %>
    </div>

