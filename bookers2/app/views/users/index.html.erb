<%= render 'users/info', users: @users,book: @book %>
   
   <% if flash[:notice] %>
    <div class="flash">
        </div>
       <% end %>

  <div class='col-xs-9'>
    <h2>Users</h2>

    <table class='table'>
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
    </thead>
    
    <tbody>
    <% @users.each do |user| %>
    <tr>
    <td>
    <%= attachment_image_tag user,:profile_image, :fill, 60,60, class: "img-circle pull-left profile-thumb",fallback: "no_image.jpg"%>
    </td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user) %></td>
    </tr>
    <% end %>
    </tbody>
</table>
</div>