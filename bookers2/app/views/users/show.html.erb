<% if flash[:notice] %>
        <div class="flash">
        </div>
       <% end %>

<div class='col-xs-3'>

      <h2>User info</h2>

    <table class='table'>
      <tr><%= attachment_image_tag @user,:profile_image, :fill, 60,60, class: "img-circle pull-left profile-thumb",fallback: "no_image.jpg"%></tr> 
      <tr>
    <th>name</th>
    <th class="profile-name"><%= @user.name %></th>
      </tr>
      <tr>
    <th>introduction</th>
    <th class="profile-introduction"><%= @user.introduction %></th>
      </tr>
      </table>
      
      <% if @user.id == current_user.id %>
      <div class='row'>
      <%= link_to '', edit_user_path(@user.id) ,class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      </div>
      <% end %>

      <h2>New book</h2>

      <%= form_for(@book) do |f| %>

      <h5>Title</h5>
      <%= f.text_field :title %>

      <h5>Opinion</h5>
      <%= f.text_area :body %>
      
      <%= f.submit 'Create Book',class: "btn btn-primary" %>

      <% end %>
    </div>

<div class='col-xs-9'>
    <h2>Books</h2>
    
    <table class='table table-hover table-inverse'>
        <thead>
        <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
    </tr>
    </thead>

<tbody>
<% @user.books.each do |book| %>
<tr>
<td>
<%= attachment_image_tag book.user,:profile_image, :fill, 60,60, class: "img-circle pull-left profile-thumb",fallback: "no_image.jpg"%>
</td>

<p class="Title">
<td><%= link_to book.title, book_path(book.id) %></td>
</p>
<td><%= book.body %></td>
</tr>
<% end %>


</tbody>
</table>
</div>



